<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.project.roy.simple_lifehack.Fragment.SixthFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout5">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@drawable/pizza1"
            android:layout_marginTop="0dp"
            android:id="@+id/imageView" />

    </LinearLayout>



    <TextView
        android:id="@+id/txt_second_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serve Pizza Tips"
        android:textColor="@color/white1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        android:background="@color/black1" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_sixth_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_white_24dp"
        app:fab_size="normal"
        app:fab_elevationCompat="6dp"
        app:fab_colorNormal="@color/colorPrimaryDark"
        app:fab_shadowColor="#66aff198"
        app:fab_shadowRadius="6dp"
        app:fab_shadowXOffset="2dp"
        app:fab_shadowYOffset="4dp"
        app:fab_showShadow="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source Image : www.mashable.com"
        android:textSize="12sp"
        android:textColor="@color/black1"
        android:layout_alignParentRight="true"
        android:layout_below="@id/layout5"
        android:textStyle="italic"
        android:id="@+id/source"/>


    <TextView
        android:layout_below="@id/source"
        android:id="@+id/teks2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tips_5"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/black2"
        android:textSize="16sp" />

    <TextView
        android:layout_below="@id/teks2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tips_52"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black2"
        android:textSize="16sp" />

</RelativeLayout>
